{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/.gitignore",
    "**/.npmrc",
    "**/.prettierignore",
    "**/.prettierrc",
    "**/*.config.js",
    "**/*.config.cjs",
    "**/*.config.mjs",
    "**/*.config.ts",
    "**/gulpfile.ts",
    "**/gulpfile.js",
    "**/gulpfile.cjs",
    "**/gulpfile.mjs",
    "**/README.md",
    "**/*.json",
    "**/yarn.lock",
    "**/.babelrc",
    "**/.eslintignore",
    "**/.eslintrc.js",
    "**/.npmignore",
    "**/.storybook/**",
    "**/storybook-static/**",
    "**/build/**",
    "**/scripts/**",
    "**/stories/**",
    "**/*.d.ts",
    "**/*.html",
    "**/__tests__/**",
    "**/tests/**",
    "**/test/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/demo/**",
    "global.d.ts",
    "shim.d.ts",
    "**/__mocks__/**"
  ]
}
